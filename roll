    <script src="jquery-3.2.1.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }
        
        body {
            margin: 0;
            padding: 150px 400px;
        }
        
        .slides {
            height: 400px;
            background: blue;
            position: relative;
            overflow: hidden;
            /*为啥不在view里写这个hidden因为接下来要改变view的位移*/
        }
        
        .view {
            height: 100%;
            display: flex;
            overflow: visible;
            transition: transform 1s;
            transform: translateX(0px);
        }
        
        .slide {
            height: 100%;
            width: 100%;
            border: 1px solid;
            background:#DDD;
            flex-shrink: 0;
            font-size: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .slide:first-child{
            background:url('http://news.xinhuanet.com/photo/2011-03/29/121241878_381n.jpg')
        }
        .slide:nth-child(2){
            background:url('http://i.magcasa.com.s3-ap-southeast-1.amazonaws.com/content_images/2015/10/06/150646/1444070709_5987.jpg')
        }
        .slide:nth-child(3){
            background:url('http://i.magcasa.com.s3-ap-southeast-1.amazonaws.com/content_images/2015/11/08/175812/1446918178_2721.jpg')
        }
        
        
        .controls {
            
            position: absolute;
            bottom: 0;
            /*之前在这里坑里一下，找不到，原来和位置有关*/
            list-style: none;
            margin: 0;
            padding: 0;
            transform:translate(-50%,0);
            left:50%;
        }
        
        ol li {
            float: left;
            padding: 10px;
